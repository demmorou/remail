{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "rootDirs": [],
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "~adapters/*": ["adapters/*"],
      "~infra/*": ["infra/*"],
      "~useCases/*": ["useCases/*"]
    }
  }
}