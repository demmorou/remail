
{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "babel-plugin-transform-typescript-metadata",
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    [
      "module-resolver",
      {
        "alias": {
          "~infra": "./src/infra",
          "~adapters": "./src/adapters",
          "~interactors": "./src/interactors"
        }
      }
    ]
  ],
  "ignore": ["src/@types", "**/*.spec.ts"]
}